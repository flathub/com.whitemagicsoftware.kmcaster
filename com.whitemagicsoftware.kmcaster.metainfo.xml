<component type="desktop-application">
    <id>com.whitemagicsoftware.kmcaster</id>
    <name>KmCaster</name>
    <summary>Display mouse and keyboard events on screen</summary>
    <metadata_license>MIT</metadata_license>
    <project_license>MIT</project_license>
    <content_rating type="oars-1.1" />
    <url type="homepage">https://github.com/DaveJarvis/kmcaster</url>
